<!--pages/phone-login/phone-login.wxml-->
<view class="phone-login-container">
  <text class="phone-validate">手机号验证</text>
  <text class="subtitle">用于即使获取课程最新信息</text>
  <view class="content">
    <input value="{{phoneNumber}}" bindblur="getPhoneNumber" maxlength="11" class="phone" placeholder="请输入您的手机号" type="number" />
    <view class="get-vcode" bindtap="queryVcode">{{isCountDown?(countNum+'s'):'获取验证码'}}</view>
    <input bindblur="getVcode" maxlength="4" class="vcode"  placeholder="请输入验证码" type="number" />
  </view>
  <view class="phone-login" bindtap="phoneLogin">
    <image src="/assets/images/phone_login@2x.png" alt="" />
  </view>
</view>