<view class="home-wrapper">
  <!-- begin 搜索区域 -->
  <view class="search-link">
    <image src="/assets/images/search_icon@2x.png"></image>
    <text>请输入课程的名称</text>
  </view>
  <!-- end 搜索区域 -->

  <!-- 轮播图 -->
  <swiper indicator-dots circular autoplay indicator-color="rgba(255,255,255,0.3)" indicator-active-color="#fff">
    <block wx:for="{{swiperList}}" wx:key="id">
      <swiper-item>
        <image src="{{item.img_url}}"></image>
      </swiper-item>
    </block>
  </swiper>

  <!--推荐课程 -->
  <view class="recommend-courses">
    <view class="head">
      <text>推荐课程</text>
      <image src="/assets/images/arrow@2x.png"></image>
    </view>
    <!-- 横向滚动 -->
    <scroll-view class="scroll-view_H" scroll-x="true" enable-flex>
      <view class="scroll-view-item_H" wx:for="{{courseList}}" wx:key="id">
        <image src="{{item.icon}}"></image>
      </view>
    </scroll-view>
  </view>

  <!-- 热门视频 -->
  <view class="hot-video">
    <view class="title">热门视频</view>
    <view class="video-list">
      <view class="video-item" wx:for="{{videoList}}" wx:key="id">
        <image src="{{item.cover_photo_url}}"></image>
        <text class="name">{{item.name}}</text>
        <text class="view-count">{{item.view_count}}人已观看</text>
      </view>
    </view>
  </view>
</view>