.home-wrapper {
  padding: 0 32rpx;
}

/* 搜索区域 */

.search-link {
  display: flex;
  align-items: center;
  margin-left: 8rpx;
}

.search-link image {
  width: 56rpx;
  height: 56rpx;
}

.search-link text {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(171, 171, 171, 1);
}

swiper {
  height: 340rpx;
}

swiper image {
  height: 100%;
  width: 100%;
}

.recommend-courses .head {
  margin: 40rpx 4rpx 34rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend-courses .head text {
  font-size: 38rpx;
  font-weight: bold;
  line-height: 52rpx;
  color: rgba(33, 33, 33, 1);
}

.recommend-courses .head image {
  width: 48rpx;
  height: 48rpx;
}

.scroll-view-item_H image {
  width: 296rpx;
  height: 168rpx;
}

.scroll-view_H {
  display: flex;
  height: 168rpx;
}

.scroll-view-item_H {
  margin-right: 20rpx;
  height: 168rpx;
}

.hot-video .title {
  font-size: 38rpx;
  font-weight: bold;
  line-height: 52rpx;
  color: rgba(33, 33, 33, 1);
  margin: 42rpx 0 38rpx 4rpx;
}

.video-list {
  display: flex;
  /* 换行 */
  flex-wrap: wrap;
  justify-content: space-between;
}

.video-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.video-item image {
  width: 324rpx;
  height: 200rpx;
  border-radius:12rpx;
}

.video-item .name {
  font-size: 26rpx;
  font-weight: 400;
  line-height: 36rpx;
  color: rgba(38, 38, 38, 1);
  margin:16rpx 0 4rpx;
}

.video-item .view-count {
  font-size: 18rpx;
  font-weight: 400;
  line-height: 26rpx;
  color: rgba(149, 149, 149, 1);
}
