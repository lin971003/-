.my-info image {
  width: 176rpx;
  height: 176rpx;
  background: rgba(0, 0, 0, 0);
  border: 10rpx solid rgba(0, 0, 0, 0.0588235294117647);
  border-radius: 50%;
  opacity: 1;
}

.my-info text {
  font-size: 42rpx;
  font-weight: 800;
  line-height: 58px;
  color: rgba(255, 255, 255, 1);
}

.content {
  margin: -42rpx 0 0 32rpx;
}

.board {
  width: 686rpx;
  height: 174rpx;
  background-color: #fff;
  border-radius: 12rpx;
  display: flex;
}

.board-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  position: relative;
  /* 方便我设置竖线时，直接贴到最右边就行 *//* width: 33.33%; */
  flex: 1;
  align-items: center;
}

.board-item:not(:last-child):after {
  position: absolute;
  content: '';
  height: 62rpx;
  width: 2rpx;
  background-color: rgba(235, 235, 235, 1);
  right: 0;
}

.board-item .num {
  font-size: 52rpx;
  font-weight: 800;
  line-height: 74rpx;
  color: rgba(51, 51, 51, 1);
}

.board-item .desc {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(168, 168, 168, 1);
}

.settings{
  background-color: #fff;
  width: 686rpx;
  margin:16rpx 0 96rpx;
}

.setting-item{
height: 122rpx;
padding:40rpx 20rpx 40rpx 42rpx;
box-sizing: border-box;
display: flex;
align-items: center;
justify-content: space-between;
position: relative;
}

.setting-item::after{
  position: absolute;
  content: '';
  height: 2rpx;
  width: 644rpx;
  background-color: rgba(248,248,248,1);
  bottom: 0;
  margin-left: -16rpx;
}

.setting-item text {
  font-size: 30rpx;
  font-weight: bold;
  line-height: 42rpx;
  color: rgba(51, 51, 51, 1);
}

.setting-item image {
  width: 48rpx;
  height: 48rpx;
}
