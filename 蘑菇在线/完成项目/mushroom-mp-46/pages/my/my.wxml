<!-- 我的信息 -->
<view class="my-info">
  <!-- <view class="avatar"> -->
  <image src="{{myInfo.avatar}}"></image>
  <!-- </view> -->
  <text>{{myInfo.nickname}}</text>
</view>

<view class="content">
  <!-- 看板 -->
  <view class="board">
    <view class="board-item">
      <text class="num">{{myInfo.study_hour}}</text>
      <text class="desc">累计学习小时</text>
    </view>
    <view class="board-item">
      <text class="num">{{myInfo.follow_count}}</text>
      <text class="desc">我的关注</text>
    </view>
    <view class="board-item">
      <text class="num">{{myInfo.course_count}}</text>
      <text class="desc">我的课程</text>
    </view>
  </view>

  <!-- 设置 -->
  <view class="settings">
    <view class="setting-item">
      <text>学习历史</text>
      <image src="/assets/images/arrow@2x.png"></image>
    </view>
    <view class="setting-item">
      <text>消息提醒</text>
      <image src="/assets/images/arrow@2x.png"></image>
    </view>
    <view class="setting-item">
      <text>清除缓存</text>
      <image src="/assets/images/arrow@2x.png"></image>
    </view>
    <view class="setting-item">
      <text>商务合作</text>
      <image src="/assets/images/arrow@2x.png"></image>
    </view>
    <view class="setting-item">
      <text>在线客服</text>
      <image src="/assets/images/arrow@2x.png"></image>
    </view>
  </view>
</view>