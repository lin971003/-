.container {
  background-color: #f4f4f4;
}
.header {
  background-color: #fff;
}
.header view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.header view view {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  box-sizing: border-box;
}
.header view view.active {
  border-bottom: 12rpx solid #eb4450;
}
.content view {
  background-color: #fff;
  margin-top: 30rpx;
  padding: 0 20rpx;
}
.content view .goods-info {
  height: 260rpx;
  border-bottom: 1rpx solid #ddd;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content view .goods-info image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 26rpx;
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
}
.content view .goods-info .right view {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content view .goods-info .right .price-num {
  margin-top: 84rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content view .goods-info .right .price-num .price {
  color: #eb4450;
}
.content view .total-price {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ddd;
  text-align: right;
  color: #999;
}
.content view .order {
  height: 88rpx;
  color: #999;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.content view .order text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 14px;
}
.content view .order button {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
}

