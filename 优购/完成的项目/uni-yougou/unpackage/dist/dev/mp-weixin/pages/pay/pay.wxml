<view><view class="address-wrapper"><block wx:if="{{address.userName}}"><view class="address"><view class="receiver"><view class="name">{{"收货人："+address.userName}}</view><view class="phone-num">{{address.telNumber}}</view><text class="iconfont icon-arrow-right"></text></view><view class="address-txt">{{"收货地址："+(address.provinceName+address.cityName+address.countyName+address.detailInfo)}}</view></view></block><block wx:else><view data-event-opts="{{[['tap',[['getAddr',['$event']]]]]}}" class="choose-address" bindtap="__e"><view>请选择地址</view><text class="iconfont icon-arrow-right"></text></view></block><view class="flower"><image src="/static/images/cart_border@2x.png"></image></view></view><view class="goods-list"><block wx:for="{{goodsList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-item"><image src="{{item.goods_small_logo}}" alt></image><view class="right"><text class="text-line2">{{item.goods_name}}</text><view class="btm"><text class="price">￥<text>{{item.goods_price}}</text>.00</text><view class="goods-num"><text>{{item.num}}</text></view></view></view></view></block></view><view data-event-opts="{{[['tap',[['pay',['$event']]]]]}}" class="bottom-fixed" bindtap="__e">{{'微信支付('+totalPrice+'.00)'}}</view></view>