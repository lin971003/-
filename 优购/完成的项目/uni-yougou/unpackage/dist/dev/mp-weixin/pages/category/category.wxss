.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 100rpx;
}
.left {
  width: 198rpx;
  overflow: scroll;
}
.left .li {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1rpx solid #eee;
  background-color: #f4f4f4;
  color: #333;
}
.left .li.active {
  color: #eb4450;
  background-color: #fff;
  position: relative;
}
.left .li.active::before {
  position: absolute;
  content: '';
  height: 60rpx;
  width: 8rpx;
  background-color: #eb4450;
  left: 0;
  top: 20rpx;
}
.right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: scroll;
}
.right > image {
  width: 520rpx;
  height: 180rpx;
  padding: 20rpx 16rpx;
}
.cate2 {
  margin-bottom: 60rpx;
}
.cate2 .title {
  height: 110rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  color: #e0e0e0;
}
.cate2 .title text {
  margin: 0 30rpx;
  color: #333;
}
.cate3-wrapper {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.cate3-wrapper .cate3 {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 33.33%;
  margin-bottom: 10rpx;
}
.cate3-wrapper .cate3 image {
  width: 120rpx;
  height: 120rpx;
}

