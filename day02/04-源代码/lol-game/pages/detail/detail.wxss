swiper image{
  width: 100%;
  height: 150px;
}

.content{
  display: flex;
  padding:12px 10px 0;
}
.left{
  width: 191px;
  display: flex;
  flex-direction: column;
}
.right{
  /* 右侧占满剩余的宽度 */
  flex:1;
}

.tags{
  margin:12px 0 18px;
}
.tags text{
  width: 30px;
  height: 22px;
  line-height: 22px;
  background-color: #029b7f;
  border-radius: 4px;
  display: inline-block;
  margin-right: 4px;
  text-align: center;
}

.title{
  font-size: 14px;
}
.name{
  font-size: 20px;
}

.ability .item{
  display: flex;
}

.item progress{
  width: 100px;
  margin-left:6px;
}