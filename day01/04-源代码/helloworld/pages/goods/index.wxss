page{
  display: flex;
  justify-content: center;
}
.goods{
  width: 234px;
  height: 324px;
  display: flex;
  flex-direction: column;
  align-items: center;
  border:1px solid #ccc;
  padding:0 22px;
  box-sizing: border-box;
}

image{
  width: 150px;
  height: 150px;
  margin:30px 0 44px;
}

.name{
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price{
  color: #e1251b;
  font-size: 12px;
  margin-top:14px;
  /* width: 100%; */
  align-self: flex-start;
}

.price .num{
  font-size: 20px;
}