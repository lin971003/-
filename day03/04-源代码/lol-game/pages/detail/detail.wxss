page {
  color: #fff;
  font-size: 12px;
  background-color: #363636;
}

swiper {
  height: 139px;
}

swiper image {
  height: 100%;
  width: 100%;
}

/* 主体内容 */

.content {
  display: flex;
  padding: 12px 10px 0;
}

.left {
  width: 191px;
}

.left .title{
  font-size: 14px;
}
.left .name{
  font-size: 18px;
  margin:4px 0 12px;
}
.right {
  /* 如果不给的话，那么会挤占左边的宽度
  占满剩下的宽度
   */
  flex: 1;
}

.tags text {
  width: 30px;
  height: 22px;
  line-height: 22px;
  text-align: center;
  background-color: #029b7f;
  border-radius: 4px;
  display: inline-block;
  margin:0 4px 18px 0;
}

.ability-item{
  display: flex;
  margin-bottom: 6px;
}

.ability-item progress{
  width: 100px;
  margin-left:6px;
}